@model demo_EFI_app.Models.AssetAssignment

@{
    ViewData["Title"] = "Asset Search";
}

<div class="container mt-4">
    <h2>Asset Search</h2>
    
    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <input type="number" name="assetId" class="form-control" placeholder="Enter Asset ID" required>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model != null)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Asset Assignment Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Asset ID</dt>
                    <dd class="col-sm-9">@Model.AssetID</dd>

                    <dt class="col-sm-3">Serial Number</dt>
                    <dd class="col-sm-9">@Model.Asset?.SerialNumber</dd>

                    <dt class="col-sm-3">Location</dt>
                    <dd class="col-sm-9">@Model.LocationDescription</dd>

                    <dt class="col-sm-3">Assignment Date</dt>
                    <dd class="col-sm-9">@Model.AssignmentDate.ToShortDateString()</dd>

                    <dt class="col-sm-3">Employee ID</dt>
                    <dd class="col-sm-9">@Model.EmployeeID</dd>

                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@Model.AssignmentNotes</dd>
                </dl>
            </div>
        </div>
    }
    else if (Context.Request.Query.ContainsKey("assetId"))
    {
        <div class="alert alert-warning">
            No current assignment found for this asset ID.
        </div>
    }
</div>